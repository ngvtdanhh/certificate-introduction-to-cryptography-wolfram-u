(* Caesar Cipher Demo *)

ClearAll[caesarEncrypt, caesarDecrypt]

caesarEncrypt[text_, shift_] := 
 StringJoin[
  Map[
   If[LetterQ[#], 
     FromCharacterCode[
      Mod[ToCharacterCode[ToUpperCase[#]][[1]] - 65 + shift, 26] + 65
     ], 
     #
   ] &,
   Characters[text]
  ]
 ]

caesarDecrypt[text_, shift_] := caesarEncrypt[text, -shift]

(* Example *)
plaintext = "HELLO WORLD";
shift = 3;

ciphertext = caesarEncrypt[plaintext, shift]
decrypted = caesarDecrypt[ciphertext, shift]
